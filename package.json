{
  "name": "cypress-orangehrm-testing",
  "version": "1.0.0",
  "description": "Cypress automation framework for OrangeHRM",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "test:login": "cypress run --spec cypress/e2e/specs/auth/login.spec.ts",
    "test:pim": "cypress run --spec cypress/e2e/specs/pim/**/*.spec.ts",
    "test:leave": "cypress run --spec cypress/e2e/specs/leave/**/*.spec.ts",
    "test:all": "cypress run",
    "generate:report": "npx mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochawesome/report.json && npx marge cypress/reports/mochawesome/report.json"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "cypress": "^15.4.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0"
  }
}
